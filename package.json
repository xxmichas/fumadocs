{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev --filter=!./examples/*",
    "dev:examples": "turbo run dev --filter=./examples/*",
    "lint": "turbo run lint",
    "lint:prettier": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "prettier": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "release": "turbo run build --filter=./packages/* && changeset publish && pnpm -r run postpublish",
    "test": "vitest",
    "types:check": "turbo run types:check",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@eslint/js": "^9.17.0",
    "@types/eslint__js": "^8.42.3",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsup": "8.3.5",
    "turbo": "2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">= 18.17.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@fumari/json-schema-to-typescript": "patches/@fumari__json-schema-to-typescript.patch"
    }
  }
}
